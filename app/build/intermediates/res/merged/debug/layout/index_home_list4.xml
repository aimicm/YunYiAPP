<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:weightSum="9"
    android:layout_marginLeft="@dimen/shouye_border"
    android:layout_marginRight="@dimen/shouye_border"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/white"

    tools:showIn="@layout/frag_home">
    <LinearLayout
        android:id="@+id/jbzz"
        android:layout_width="0dp"
        android:layout_weight="4"
        android:orientation="vertical"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="50dp"
            android:layout_gravity="center"
            android:layout_height="60dp"
            android:src="@mipmap/home_fuwuxiangmu" />
        <TextView
            android:id="@+id/jbzz1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:textSize="16sp"
            android:text="疾病自诊"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp"
            android:textColor="#333333"
            android:gravity="center"
            android:textSize="15sp"
            android:text="选择你的症状"
            />

    </LinearLayout>

    <View
        android:layout_width="@dimen/shouye_border"
        android:background="#F2F2F2"
        android:layout_height="match_parent"/>
    <LinearLayout
        android:layout_width="0dp"
        android:weightSum="2"
        android:orientation="vertical"
        android:layout_weight="5"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:id="@+id/findhos1">
            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/findho"
                android:id="@+id/imageView"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="找医院"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:id="@+id/textView2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#333333"
                    android:text="寻找就诊医院"
                    android:id="@+id/textView" />
            </LinearLayout>



        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:background="#F2F2F2"
            android:layout_height="@dimen/shouye_border"/>
        <LinearLayout
            android:id="@+id/finddoc"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >
            <ImageView
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_gravity="center"
                android:src="@mipmap/finddoc"
                android:layout_marginLeft="10dp"
                android:id="@+id/imageView2"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="找大夫"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:id="@+id/textView3" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:textColor="#333333"
                    android:text="寻找专家名医"
                    android:id="@+id/textView4" />
            </LinearLayout>


        </LinearLayout>



    </LinearLayout>




</LinearLayout>