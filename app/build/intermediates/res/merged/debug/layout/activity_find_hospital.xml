<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.zxiaofan.yunyi.activity.FindDocActivity">
    <util.TitleBarUtils
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bigButtonHeight" >
    </util.TitleBarUtils>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/ed_find_hos"
            android:hint="输入疾病名查找医院"
            android:textSize="20dp"
            android:paddingLeft="10dp"
            android:background="@drawable/et"
            android:layout_height="match_parent"
            android:layout_width="1.0dp"
            android:layout_weight="4"/>
        <Button
            android:id="@+id/bt_find_Hos"
            android:layout_height="wrap_content"
            android:text="查询"
            android:layout_width="1.0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <view.SearchView
        android:id="@+id/finddoc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="医生"
        ></view.SearchView>
    <LinearLayout
        android:background="#B8DFCB"
        android:id="@+id/l1"
        android:orientation="horizontal"
        android:weightSum="3"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:id="@+id/tv1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="附近▼"
            />
        <TextView
            android:id="@+id/tv2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="等级▼"
            />
        <TextView
            android:id="@+id/tv3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:gravity="center"
            android:text="类型▼"
            />
    </LinearLayout>

    <widget.RefreshLayout
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_gravity="center_horizontal"/>
    </widget.RefreshLayout>

</LinearLayout>

