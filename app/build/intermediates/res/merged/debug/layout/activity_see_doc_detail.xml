<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zxiaofan.yunyi.record.SeeDocDetail">
    <util.TitleBarUtils
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bigButtonHeight"/>
    <include
        android:layout_width="match_parent"
        android:layout_height="100dp"
        layout="@layout/my_record_rl_listitem"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_dzbl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#b8dfcb"
                android:gravity="center"
                android:text="电子病历"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"/>
            <TextView
                android:id="@+id/tv_Fjyd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#b8dfcb"
                android:gravity="center"
                android:text="检验单"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"/>
            <TextView
                android:id="@+id/tv_Fjcd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#b8dfcb"
                android:gravity="center"
                android:text="检查单"/>
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:layout_marginTop="3dp"
                android:layout_marginBottom="3dp"/>
            <TextView
                android:id="@+id/tv_Fcfd"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#b8dfcb"
                android:gravity="center"
                android:text="处方单"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_fragment"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"></LinearLayout>
    </LinearLayout>
</LinearLayout>
