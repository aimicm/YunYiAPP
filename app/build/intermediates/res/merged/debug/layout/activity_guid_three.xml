<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#02c2d9"
    android:gravity="center"
    tools:context="com.zxiaofan.yunyi.activity.GuidOne">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="400dp"
        android:src="@mipmap/guide03"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/yellow"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="完善的就诊信息"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="10dp"
        android:text="详细就诊记录信息，可以在线查询跟踪"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/radio"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/radio"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/radio_sel"/>
    </LinearLayout>

    <TextView
        android:id="@+id/welcome_guide_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jump_home"
        android:layout_margin="10dp"
        android:textSize="25sp"
        android:textColor="@color/white" />

</LinearLayout>
