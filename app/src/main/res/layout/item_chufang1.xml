<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/bg_layout_line"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="慢性阑尾炎"
            android:textSize="16sp"
            android:textColor="#000000"
            android:id="@+id/tv_title"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="14dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="中国人民解放军医院"
            android:layout_marginTop="10dp"
            android:textColor="#333333"
            android:id="@+id/tv_hospital"
            android:layout_below="@+id/tv_title"
            android:layout_alignLeft="@+id/tv_title"
            android:layout_alignStart="@+id/tv_title" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="普通外科"
            android:layout_marginTop="10dp"
            android:textColor="#333333"
            android:id="@+id/textView48"
            android:layout_alignBottom="@+id/tv_hospital"
            android:layout_toRightOf="@+id/tv_hospital"
            android:layout_toEndOf="@+id/tv_hospital"
            android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="2015-09-24"
            android:id="@+id/tv_date"
            android:layout_marginRight="10dp"
            android:layout_above="@+id/textView48"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="收起"
            android:layout_marginTop="10dp"
            android:textColor="#333333"
            android:id="@+id/textView50"
            android:layout_below="@+id/tv_date"
            android:layout_alignRight="@+id/tv_date"
            android:layout_alignEnd="@+id/tv_date" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/white"/>
</LinearLayout>