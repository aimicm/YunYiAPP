<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#ffffff"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="com.zxiaofan.yunyi.hospital.TrackingStationActivity">
    <util.TitleBarUtils
        android:id="@+id/titleBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/bigButtonHeight" >
    </util.TitleBarUtils>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/hospital_height"
        android:gravity="center_vertical"
        android:paddingLeft="15dp"
        android:textSize="16sp"
        android:textColor="#000000"
        android:text="四川大学华西医院"
        android:id="@+id/tv_hospital_name"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:background="#F2F2F2"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/call_num_list"
            android:layout_width="match_parent"
            android:layout_above="@+id/btn_refresh"
            android:layout_height="match_parent"/>

        <Button
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_btn_register"
            android:textColor="@color/white"
            android:text="刷新"
            android:layout_alignParentBottom="true"
            android:id="@+id/btn_refresh" />

    </RelativeLayout>



</LinearLayout>
