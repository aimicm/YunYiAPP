        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="13sp"
            android:text="消化内科"
            android:id="@+id/textView24"
            android:layout_marginLeft="21dp"
