<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TableRow
            android:id="@+id/tableRow1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/textView65"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="疾病自诊--足部或踝关节疼痛"
                android:textColor="@color/blueviolet" />

        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView65"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="受影响或累及部位为"
                android:textColor="@color/blueviolet" />

            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="1"
                android:checked="false"
                android:text="整个脚" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_weight="1"
                android:checked="false"
                android:text="脚前部或脚趾" />
        </TableRow>

        <TableRow>

            <TextView android:layout_weight="1" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="1"
                android:checked="false"
                android:text="脚的中间部位" />

            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_weight="1"
                android:checked="false"
                android:text="脚踝" />
        </TableRow>

        <TableRow>

            <TextView android:layout_weight="1" />

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="1"
                android:checked="false"
                android:text="足跟" />

            <TextView android:layout_weight="1" />
        </TableRow>

        <TableRow>

            <TextView
                android:id="@+id/textView65"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="何种因素可引发此症状"
                android:textColor="@color/blueviolet" />

            <CheckBox
                android:id="@+id/checkBox7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="1"
                android:checked="false"
                android:text="休息" />

            <CheckBox
                android:id="@+id/checkBox8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="1"
                android:checked="false"
                android:text="受伤" />
        </TableRow>

        <TableRow>

            <TextView android:layout_weight="1" />


            <CheckBox
                android:id="@+id/checkBox9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="1"
                android:checked="false"
                android:text="过度使用" />

            <TextView android:layout_weight="1" />
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="伴有"
                android:textColor="@color/blueviolet" />

            <CheckBox
                android:id="@+id/checkBox11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="1"
                android:checked="false"
                android:text="不能负重" />

            <CheckBox
                android:id="@+id/checkBox12"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_weight="1"
                android:checked="false"
                android:text="发肿" />
        </TableRow>

        <TableRow>

            <TextView android:layout_weight="1" />

            <CheckBox
                android:id="@+id/checkBox13"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="1"
                android:checked="false"
                android:text="无力或疲弱" />

            <CheckBox
                android:id="@+id/checkBox14"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_weight="1"
                android:checked="false"
                android:text="灼烧感" />


        </TableRow>

        <TableRow>

            <TextView android:layout_weight="1" />

            <CheckBox
                android:id="@+id/checkBox15"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="1"
                android:checked="false"
                android:text="站立不稳的感觉" />

            <CheckBox
                android:id="@+id/checkBox6"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_weight="1"
                android:checked="false"
                android:text="足部或踝关节发红" />


        </TableRow>

        <TableRow>

            <TextView android:layout_weight="1" />

            <CheckBox
                android:id="@+id/checkBox16"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_column="2"
                android:layout_weight="1"
                android:checked="false"
                android:text="踮着脚走路有困难" />

            <CheckBox
                android:id="@+id/checkBox10"
                android:layout_width="22dp"
                android:layout_height="wrap_content"
                android:layout_column="3"
                android:layout_weight="1"
                android:checked="false"
                android:text="麻木或刺痛" />

        </TableRow>

        <TableRow android:gravity="center">

            <Button
                android:id="@+id/bt_jbcc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/lawngreen"
                android:text="查询"
                android:textColor="#ffffff"
                android:textSize="30dp" />
        </TableRow>
    </TableLayout>
</ScrollView>